ZADATAK 45:

#include<iostream>
#include<string>
using namespace std;
int BrojRijeci(string s){
    int brojac=0;
    for(int i=0;i<s.length();i++){
        if(s[i]!=' ' && (i==0 || s[i-1]==' ')){
            brojac++;
        }
    }
    
    return brojac;
}
int main(){
    string recenica;
    cout<<"Unesi recenicu:";
    getline(cin,recenica);
    int rez=BrojRijeci(recenica);
    cout<<rez;
    
    return 0;
}

