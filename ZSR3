ZADATAK 11: 

#include<iostream>
#include<vector>
using namespace std;
int BrojCifara(long long int n){
    int brojac=0;
     if(n==0) return 1;
    while(n!=0){
        int cifra=n%10;
        
        brojac++;
        n/=10;
    }
    return brojac;
}
vector<int>NoviVektor(vector<long long int> v){
    vector<int> rez;
    for(int i=0;i<v.size();i++){
        if(v[i]<0){
            throw domain_error("Negativan element vektora.");
        }
        rez.push_back(BrojCifara(v[i]));
    }
    return rez;
}
int main(){
    vector<long long int> brojevi={1,8,10,27,64,5,125,200,100,60};
    try {
        vector<int> rezultat=NoviVektor(brojevi);
        cout<<"Rezultat: ";
        for(int i=0;i<rezultat.size();i++){
            cout<<rezultat[i]<<" ";
        }
        cout<<endl;
    }catch(const domain_error& e){
        cout<<"Greska: "<<e.what()<<endl;
    }
    
    return 0;
}


